
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow the specific document used for wishes to be accessed by the authenticated app user
    match /users/yQICBVFWRPNzdK9Cb27Jkxlr7452 {
      allow read, write: if request.auth != null;
    }
    
    // Default deny for any other collections/documents for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
